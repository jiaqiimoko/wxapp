/**index.wxss**/

.searchInput {
  background-color: #f1f2f2;
  margin: 3px 10px;
  padding-left: 8px;
  font-size: 15px;
  line-height: 23px;
}

swiper {
  height: 350rpx;
}

.swiperBox {
  display: flex;
  flex-wrap: wrap;
}

.swiperBox .swiperItem {
  width: 20%;
  font-size: 12px;
  text-align: center;
}

.scroll-view-item {
  width: 350rpx;
  height: 50rpx;
  display: inline-block;
}

.sort-wrap {
  height: 90rpx;
  background-color: #fff;
  position: sticky;
  position: -webkit-sticky;
  top: 0;
}

.sort-btn {
  width: 33.333%;
  display: inline-block;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
}

.sort-btn image {
  width: 9rpx;
  height: 18rpx;
  margin-left: 6rpx;
}
.list {
  width: 750rpx;
}

.shopPic {
  float: left;
  width: 170rpx;
  height: 140rpx;
}

.shopDetail {
  float: right;
  width: 580rpx;
}

.shopName {
  font-size: 16px;
  font-weight: bold;
  padding-left: 10px;
}

.shopTr1, .shopTr2, .shopTr3 {
  width: 550rpx;
  /* height: 30px; */
  overflow: hidden;
}

.shopTr1>view, .shopTr2>view, .shopTr3, .shopTags>.shoptag {
  font-size: 13px;
  /* height: 28px; */
  float: left;
  line-height: 28px;
  /* margin-left: 5px; */
}

.rate {
  margin-top: -3px;
  float: left;
}

.i-rate-star {
  margin-left: 0px;
}

.fixed {
  position: fixed;
  top: 0;
  margin-left: 33.33%;
  background: #fff;
}
.fixed:first-child{
  margin-left: 0;
}
.fixed:nth-child(3){
  margin-left: 66.66%;
}