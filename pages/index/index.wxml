<!--index.wxml-->
<view class="container">
  <view class="header">
    <i-icon type="coordinates" size="20" />张店区>
    <i-input class='searchInput' value="" placeholder="满20-15" />
  </view>
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}" indicator-active-color="{{indicatorActiveColor}}">
      <swiper-item class='swiperBox'>
        <view class='swiperItem' wx:for="{{iconList1}}">
          <i-icon size='30' type='{{item.iconName}}'></i-icon>
          <view>{{item.name}}</view>
        </view>
      </swiper-item>
      <swiper-item class='swiperBox'>
        <view class='swiperItem' wx:for="{{iconList2}}">
          <i-icon size='30' type='{{item.iconName}}'></i-icon>
          <view>{{item.name}}</view>
        </view>
      </swiper-item>
    </swiper>


    <scroll-view 
     scroll-x="true"
     style="height: 100px;white-space: nowrap; display: flex">
      <view id="green" class="scroll-view-item" wx:for="{{iconList1}}">
        <image
          style="width: 200px; height: 80px;"
          mode="aspectFit"
          src="../../img/pic1.jpg"
        ></image>
        <view>{{item.name}}</view>
      </view>
    </scroll-view>
  </view>

  <view class='sort-wrap'>
    <view class='sort-btn'>综合</view>
    <view class='sort-btn' data-index="{{daindex1}}" bindtap="choosesort1">销量</view>
    <view class='sort-btn' data-index="{{daindex2}}" bindtap="choosesort2">价格</view>
  </view>
</view>